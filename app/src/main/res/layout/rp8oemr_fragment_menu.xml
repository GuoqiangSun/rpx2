<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/rp8_menu_bg_new">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                /><Button
            android:id="@+id/rp8_gear"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:background="@mipmap/settings"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_layout"
            android:layout_width="400dp"
            android:layout_height="225dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/rp8_panel_empty_up">

            <Button
                android:id="@+id/btn_on_off"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/btn_center"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="62dp"
                android:layout_toLeftOf="@+id/btn_center"
                android:layout_toStartOf="@+id/btn_center"
                android:background="@mipmap/rp8_btn_off" />

            <Button
                android:id="@+id/btn_b"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginRight="104dp"
                android:layout_marginTop="87dp"
                android:layout_toLeftOf="@+id/btn_center"
                android:layout_toStartOf="@+id/btn_center"
                android:background="@mipmap/btn_common"
                android:text="BLG"
                android:textColor="@color/color_tv_white"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:id="@+id/btn_brand"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_above="@+id/btn_center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:background="@mipmap/brand_tracker" />

            <Button
                android:id="@+id/btn_nav"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_above="@+id/btn_center"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="58dp"
                android:layout_toEndOf="@+id/btn_center"
                android:layout_toRightOf="@+id/btn_center"
                android:background="@mipmap/btn_common"
                android:text="NAV"
                android:textColor="@color/color_tv_white"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/layout_wifi"
                android:layout_width="24dp"
                android:layout_height="26dp"
                android:layout_marginRight="84dp"
                android:layout_marginTop="91dp"
                android:layout_toLeftOf="@+id/btn_center"
                android:layout_toStartOf="@+id/btn_center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/wifi_on"
                />
            <ImageView
                android:id="@+id/layout_logo"
                android:layout_width="168dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/rp8_layout_logo"
                />
            <ImageView
                android:id="@+id/layout_bt"
                android:layout_width="24dp"
                android:layout_height="26dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="91dp"
                android:layout_toEndOf="@+id/btn_center"
                android:layout_toRightOf="@+id/btn_center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/bt_on"
                />
            <Button
                android:id="@+id/btn_center"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null" />
            <Button
                android:layout_width="1px"
                android:layout_height="1px"
                android:id="@+id/blink_wifi_rate"/>
            <Button
                android:id="@+id/blink_live"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null" />
            <Button
                android:id="@+id/btn_m"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_below="@+id/btn_center"
                android:layout_marginRight="57dp"
                android:layout_marginTop="13dp"
                android:layout_toStartOf="@+id/btn_center"
                android:layout_toLeftOf="@+id/btn_center"
                android:background="@mipmap/btn_common"
                android:text="INT"
                android:textColor="@color/color_tv_white"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:id="@+id/btn_s"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_below="@+id/btn_center"
                android:layout_marginRight="3dp"
                android:layout_marginTop="26dp"
                android:layout_toStartOf="@+id/btn_center"
                android:layout_toLeftOf="@+id/btn_center"
                android:background="@mipmap/btn_common"
                android:text="ACC\n1"
                android:textColor="@color/color_tv_white"
                android:textSize="@dimen/text_size_16"/>
            <Button
                android:id="@+id/btn_1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_below="@+id/btn_center"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="26dp"
                android:layout_toEndOf="@+id/btn_center"
                android:layout_toRightOf="@+id/btn_center"
                android:background="@mipmap/btn_common"
                android:text="ACC\n2"
                android:textColor="@color/color_tv_white"
                android:textSize="@dimen/text_size_16"/>
            <com.o88o.bluetoothrp8.widget.LongClickButton
                android:id="@+id/btn_2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_below="@+id/btn_center"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/btn_center"
                android:layout_toRightOf="@+id/btn_center"
                android:background="@mipmap/rp8r_btn_horn" />
            <Button
                android:id="@+id/btn_3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="87dp"
                android:layout_toEndOf="@+id/btn_center"
                android:layout_toRightOf="@+id/btn_center"
                android:background="@mipmap/btn_common"
                android:text="LIVE"
                android:textColor="@color/color_tv_white"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/rp8_menu_booter_new_1080"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_layout_down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--android:layout_width="400dp"
                android:layout_height="320dp"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/panel_btn_power"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@mipmap/rp8_btn_off" />
                        <TextView
                            android:id="@+id/panel_tv_power"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="POWER ON"
                            android:textColor="@color/color_bg_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/panel_btn_1"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@mipmap/btn_common_110"
                            android:text="ACC\n2"
                            android:textColor="@color/color_tv_white"
                            android:textSize="@dimen/text_size_14"/>
                        <TextView
                            android:id="@+id/panel_tv_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="@string/menu_acc2_off"
                            android:textColor="@color/color_bg_dark"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/panel_btn_b"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/btn_common_110"
                            android:layout_weight="1"
                            android:text="BLG"
                            android:textColor="@color/color_tv_white"
                            android:textSize="@dimen/text_size_16"/>
                        <TextView
                            android:id="@+id/panel_tv_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="@string/menu_blg_off"
                            android:textColor="@color/color_bg_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1">
                        <com.o88o.bluetoothrp8.widget.LongClickButton
                            android:id="@+id/panel_btn_2"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@mipmap/rp8r_btn_horn"
                            />
                        <TextView
                            android:id="@+id/panel_tv_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="@string/menu_horn_off"
                            android:textColor="@color/color_bg_dark"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/panel_btn_m"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/btn_common_110"
                            android:layout_weight="1"
                            android:text="INT"
                            android:textColor="@color/color_tv_white"
                            android:textSize="@dimen/text_size_16"/>
                        <TextView
                            android:id="@+id/panel_tv_m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="@string/menu_int_off"
                            android:textColor="@color/color_bg_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/panel_btn_3"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@mipmap/btn_common_110"
                            android:text="LIVE"
                            android:textColor="@color/color_tv_white"
                            android:textSize="@dimen/text_size_14"/>
                        <TextView
                            android:id="@+id/panel_tv_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="@string/menu_live_off"
                            android:textColor="@color/color_bg_dark"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/panel_btn_s"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/btn_common_110"
                            android:layout_weight="1"
                            android:text="ACC\n1"
                            android:textColor="@color/color_tv_white"
                            android:textSize="@dimen/text_size_14"/>
                        <TextView
                            android:id="@+id/panel_tv_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="@string/menu_acc1_off"
                            android:textColor="@color/color_bg_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/panel_btn_nav"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@mipmap/btn_common_110"
                            android:text="NAV"
                            android:textColor="@color/color_tv_white"
                            android:textSize="@dimen/text_size_14"/>
                        <TextView
                            android:id="@+id/panel_tv_nav"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="NAVIGATION LGT OFF"
                            android:textColor="@color/color_bg_dark"/>
                        <Button
                            android:id="@+id/panel_btn_anchor"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_center_down"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
