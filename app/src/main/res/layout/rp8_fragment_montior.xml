<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/montior_water_pg_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/monitorHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/monitor_dash_board"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    />
                <Button
                    android:id="@+id/rp8_gear"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:background="@mipmap/settings"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/montior_water_relationLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/montior_center"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/montior_water_botton"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/montior_water_botton"
                    ></ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/montior_water_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_size_28"
                    android:textColor="@color/color_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/color_white"/>
                </LinearLayout>
                    <ImageView
                        android:id="@+id/montior_water_indicator"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:rotation="180"
                        android:background="@mipmap/montior_water_indicator"/>
                    <ImageView
                        android:id="@+id/montior_water_up"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/montior_water_up"/>

                </RelativeLayout>

            <Button
                android:id="@+id/montior_center2"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"/>

            <LinearLayout
                android:id="@+id/rp8_dsi_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/montior_center2"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/rp8_dsi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/dsi_off"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        />

                    <TextView
                        android:id="@+id/rp8_dsi_tv"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:text="DSI"
                        android:textColor="@color/color_green"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <com.o88o.bluetoothrp8.widget.HistogramView
            android:id="@+id/montior_water_histogram"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1">

        </com.o88o.bluetoothrp8.widget.HistogramView>
        <Button
            android:id="@+id/montior_water_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/montior_water_sync"/>
    </LinearLayout>

</LinearLayout>
