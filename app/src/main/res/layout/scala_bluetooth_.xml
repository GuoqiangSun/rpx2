<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/connect_layout"
    android:layout_width="410dp"
    android:layout_height="230dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/connectPhone"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/rp8_disconnect_pg" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/connectPhone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/connectPhone"
        android:layout_toRightOf="@+id/connectPhone"
        android:background="@mipmap/rp8_disconnect_btn_pg" />

</RelativeLayout>